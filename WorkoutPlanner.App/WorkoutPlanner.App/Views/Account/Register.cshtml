
@{
    ViewBag.Title = "RegisterForm";
}

<h2>Register New user</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.Label("e-mail: ")
    @Html.TextBox("email")
    <br />
    @Html.Label("name: ")
    @Html.TextBox("name")
    <br />
    @Html.Label("password: ")
    @Html.Password("password")
    <br />
    <input type="submit" value="Register" />

}